icon: ./Icon.png
app_name: 'jeemains2023'
micros:
  - name: StaticFiles
    src: ./
    engine: static
    public_routes:
      - '/*'
    commands:
      - npm run build
    serve: build
    primary: true
  - name: APIBackend
    src: ./api
    engine: custom
    commands:
      - go get
      - go build -o main.out -tags=jsoniter app.go
    run: APP_ENV=production ./main.out
    include:
      - main.out
    public_routes:
      - '/api/*'
    path: api
    presets:
      env:
        - name: STATIC_SITE_URL
          description: URL of the static site hosted on a CDN
